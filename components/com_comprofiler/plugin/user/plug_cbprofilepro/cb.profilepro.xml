<cbinstall version="1.0" type="plugin" group="user" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="file:../../../../../validation/ahawow.xsd">
	<name>CB Profile Pro</name>
	<creationDate>December 2014</creationDate>
	<author>Joomduck</author>
	<authorEmail>support@joomduck.com</authorEmail>
	<authorUrl>http://www.joomduck.com</authorUrl>
